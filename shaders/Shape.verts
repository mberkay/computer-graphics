#version 330 core

layout (location = 0) in vec4 vertexPosition;
layout (location = 1) in vec4 vertexColor;


out vec4 outColor;
out vec2 outUV;
out vec3 outNormal;
out vec3 fragPos;

uniform mat4 model;
uniform mat4 view;
uniform mat4 proj;

void main()
{
	gl_Position = proj * view * model * vertexPosition;
	//fragPos = vec3( model * vertexPosition );
	outColor = vertexColor;
}
